<p class="notice"></p>
<div class="container">
  <div class="row">
    <h1>注文履歴詳細</h1>
      <p class="notice"></p>
      <div class="container">
        <div class="row">
        <table class="table">
          <tbody>
            <h6>注文情報</h6>
              <tr>
                <th>注文日</th>
                <td>
                  <%#= @order.created_at %>
                </td>
              </tr>
              <tr>
                <th>配送先</th>
                <td>
                  <%= @order.post_code %>
                  <%= order.address %>
                  <%= order.name %>
                </td>
              </tr>
              <tr>
                <th>支払方法</th>
                <td>
                  <%#= Order.payment_methods_i18n[@order.payment_method] %>
                  <%#= f.hidden_field :payment_method, value: @order.payment_method %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <p class="notice"></p>
        <div class="container">
          <div class="row">
          <table class="table">
            <tbody>
              <h6>請求情報</h6>
                <tr>
                  <th>商品合計</th>
                  <td>
                    <%= order.created_at %>
                  </td>
                </tr>
                <tr>
                  <th>配送料</th>
                  <td>
                    <%= @postage %>
                  </td>
                </tr>
                <tr>
                  <th>ご請求額</th>
                  <td>
                    <%#= Order.payment_methods_i18n[@order.payment_method] %>
                    <%#= f.hidden_field :payment_method, value: @order.payment_method %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <p class="notice"></p>
          <div class="container">
            <div class="row">
            <table class="table">
              <tbody>
                <h6>注文内容</h6>
                  <tr>
                    <th>商品</th>
                    <td>
                      <%= order.created_at %>
                    </td>
                  </tr>
                  <tr>
                    <th>単価（税込）</th>
                    <td>
                      <%= order.post_code %>
                      <%= order.address %>
                      <%= order.name %>
                    </td>
                  </tr>
                  <tr>
                    <th>個数</th>
                    <td>
                      <%#= Order.payment_methods_i18n[@order.payment_method] %>
                      <%#= f.hidden_field :payment_method, value: @order.payment_method %>
                    </td>
                  </tr>
                  <tr>
                    <th>小計</th>
                    <td>
                      <%#= Order.payment_methods_i18n[@order.payment_method] %>
                      <%#= f.hidden_field :payment_method, value: @order.payment_method %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>






  </div>
</div>











