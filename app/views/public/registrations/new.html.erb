<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-40 px-5">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: customer_registration_path) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table class="table">
          <tbody>
          <tr>
            <th>氏名</th>
            <td>
              <div class="field">
                <%= f.label "姓" %>
                <%= f.text_field :last_name %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.label "名" %>
                <%= f.text_field :first_name %>
              </div>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <div class="field">
                <%= f.label "セイ" %>
                <%= f.text_field :last_name_kana %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.label "メイ" %>
                <%= f.text_field :first_name_kana %>
              </div>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td>
              <div class="field">
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>住所</th>
            <td>
              <div class="field">
                <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td>
              <div class="field">
                <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              パスワード
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>ケタ以上)</em>
                <% end %><br />
            </th>
            <td>
              <div class="field">
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              パスワード（確認用）
            </th>
            <td>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            </td>
          </tr>
       </tbody>
    </table>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

<p class="notice"></p>
      <h5>既に会員登録済みの方</h5>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>