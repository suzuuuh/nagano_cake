 <p id="notice"></p>
 <div class="col-md-8 offset-md-1">
          <h2>会員一覧</h2>
          <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to customer.last_name,admin_customer_path(customer.id) %>
              <%= link_to customer.first_name,admin_customer_path(customer.id) %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_deleted == true %>
                <span class="text-active">退会済み</span>
              <% else %>
                <span class="text-invalid">有効</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>


