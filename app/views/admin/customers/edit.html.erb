<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

        <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

         <%= form_with model: @customer,url: admin_customer_path(@customer.id), method: :patch do |f| %>
              <table class="table">
                <tbody>
                  <tr>
                    <td>
                      会員ID
                    </td>
                    <td>
                      <%= @customer.id %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      氏名
                    </td>
                    <td>
                      <%= f.text_field :last_name, autofocus: true, class:"form-control name"%>
                    </td>
                    <td>
                      <%= f.text_field :first_name, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      フリガナ
                    </td>
                    <td>
                      <%= f.text_field :last_name_kana, autofocus: true, class:"form-control name"%>
                    </td>
                    <td>
                      <%= f.text_field :first_name_kana, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      郵便番号
                    </td>
                    <td>
                      <%= f.text_field :postal_code, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      住所
                    </td>
                    <td>
                      <%= f.text_field :address, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      電話番号
                    </td>
                    <td>
                      <%= f.text_field :telephone_number, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      メールアドレス
                    </td>
                    <td>
                      <%= f.text_field :email, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      会員ステータス
                    </td>
                    <td>
                      <%= f.radio_button :is_deleted, true %>
                      <%= f.label :is_deleted, "有効", class: "text-active" %>
                    </td>
                    <td>
                      <%= f.radio_button :is_deleted, false %>
                      <%= f.label :is_deleted, "退会済み", class: "text-active" %>
                    </td>
                  </tr>
                </tbody>
              </table>


              <div class="form-group">
                <%= f.submit "変更内容を保存", class:"btn btn-secondary" %>
              </div>
        <% end %>
