<p id="notice"></p>
<div class="col-md-8 offset-md-1">
    <h2>商品詳細</h2>
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>
                商品名
              </th>
              <td>
                <%= @item.name %>
              </td>
            </tr>
            <tr>
              <th>
                商品説明
              </th>
              <td>
                <%= @item.introduction %>
              </td>
            </tr>
            <tr>
              <th>
                税込価格（税抜価格）
              </th>
              <td>
                <%= (@item.price*1.1).floor %>(<%= @item.price %>)
              </td>
            </tr>
          </tbody>
        </table>

        <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-sm btn-success" %>
</div>
