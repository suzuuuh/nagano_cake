<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-7 mx-auto">
      <h4>商品新規登録</h4>
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <table class="table">
              <tbody>
                <tr>
                  <th>
                    商品画像
                  </th>
                  <td>
                    <%= f.file_field :image, accept: "image/*" %>
                  </td>
                </tr>
                <tr>
                  <th>
                    商品名
                  </th>
                  <td>
                  <%= f.text_field :name %>
                  </td>
                </tr>
                <tr>
                  <th>商品説明</th>
                  <td>
                  <%= f.text_field :introduction %>
                  </td>
                </tr>
                <tr>
                  <th>税抜価格</th>
                  <td>
                  <%= f.text_field :price %>
                  </td>
                </tr>
              </tbody>
            </table>

            <div class="form-group">
              <%= f.submit '新規登録', class:"btn btn-success" %>
              </div>
            <% end %>
