 <div class="col-md-8 offset-md-1">
          <h2>商品一覧</h2>
          <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to item.name,item_path(item.id) %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>


