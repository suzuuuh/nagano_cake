<p id="notice"></p>
 <div class="col-md-8 offset-md-1">
          <h2>商品一覧</h2>
          <div>
            <%= link_to "+", new_admin_item_path, class:"btn btn-primary rounded-circle p-0 pull-right", style:"width:2rem;height:2rem; float:right;" %>
          </div>
          <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to item.name,admin_item_path(item.id) %>
            </td>
            <td>
              ¥<%= item.price %>
            </td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>


