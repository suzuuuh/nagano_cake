<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-6 mx-auto">
        <h2>商品編集</h2>


          <%= form_with model: @item,url: admin_item_path, method: :patch do |f| %>
              <table class="table">
                <tbody>
                  <tr>
                    <td>
                      商品画像
                    </td>
                    <td>
                      <%= f.file_field :image, autofocus: true %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      商品名
                    </td>
                    <td>
                      <%= f.text_field :name, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      商品説明
                    </td>
                    <td>
                      <%= f.text_field :introduction, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      税抜価格
                    </td>
                    <td>
                      <%= f.text_field :price, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                </tbody>
              </table>


              <div class="form-group">
                <%= f.submit "変更を保存", class:"btn btn-secondary" %>
              </div>
        <% end %>





