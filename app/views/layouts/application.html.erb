<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header>
    <% if customer_signed_in? %>
      <li>
        <%= link_to "マイページ", customers_my_page_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
      <li>
        <%= link_to "商品一覧", items_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
      <li>
        <%= link_to "カート", cart_items_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, class: 'nav-link text-light' method: :delete do %>
        <% end %>
      </li>
    <% elsif admin_signed_in? %>
      <li>
        <%= link_to "商品一覧", admin_cart_items_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
      <li>
        <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
      <li>
        <%= link_to "注文履歴一覧", admin_root_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_sessions_path, class: 'nav-link text-light' method: :delete do %>
        <% end %>
      </li>



    <% else %>
      <li>
        <%= link_to "About", destroy_customer_session_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
      <li>
        <%= link_to "商品一覧", destroy_customer_session_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
      <li>
        <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-light' do %>
        <% end %>
      </li>
    <% end %>
  </header>
    <%= yield %>
  </body>
</html>
